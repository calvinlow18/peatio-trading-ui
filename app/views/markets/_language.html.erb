<li id="language" class="dropdown">
  <a class="dropdown-toggle" href="#" data-toggle="dropdown">
    <img class="lang-icon" src="<%= ENV['FRONTEND_ROOT_URL'] %>/languages/<%= I18n.locale %>.png"/>
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <% I18n.available_locales.each do |lang| %>
      <li>
        <a href="?lang=<%= lang %>">
          <img class="lang-icon" src="<%= ENV['FRONTEND_ROOT_URL'] %>/languages/<%= lang %>.png"/>
        </a>
      </li>
    <% end %>
  </ul>
</li>
